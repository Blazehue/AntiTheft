{
  "system": {
    "name": "Anti-Theft Alarm System",
    "version": "1.0.0",
    "debug_mode": true
  },
  "camera": {
    "device_id": 0,
    "resolution": [640, 480],
    "fps": 30
  },
  "memory": {
    "frame_buffer_size": 30,
    "cache_size": 100,
    "cache_replacement_policy": "LRU"
  },
  "motion_detection": {
    "threshold": 25,
    "min_contour_area": 500,
    "blur_kernel_size": 21,
    "dilation_iterations": 2
  },
  "face_recognition": {
    "enabled": true,
    "tolerance": 0.6,
    "model": "hog",
    "detection_interval": 5
  },
  "alarm": {
    "enabled": true,
    "sound_file": "alarm.wav",
    "duration": 5,
    "cooldown_period": 10
  },
  "notification": {
    "email_enabled": false,
    "sms_enabled": false,
    "email_settings": {
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "sender_email": "your_email@gmail.com",
      "sender_password": "your_app_password",
      "recipient_email": "recipient@gmail.com"
    }
  },
  "storage": {
    "base_path": "storage",
    "intruder_images_path": "storage/intruders",
    "logs_path": "storage/logs",
    "authorized_faces_path": "storage/authorized_faces",
    "compression_quality": 85,
    "max_storage_mb": 1000
  },
  "performance": {
    "enable_monitoring": true,
    "log_interval_seconds": 5,
    "enable_profiling": true
  },
  "threading": {
    "capture_thread_priority": "high",
    "processing_thread_priority": "normal",
    "alert_thread_priority": "high",
    "use_thread_pool": false
  }
}
